<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="78.5dp"
        android:layout_height="78.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="138dp"
        android:src="@drawable/loco"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/fragementset_NICKNAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152.8dp"
        android:layout_marginTop="234.5dp"
        android:layout_marginEnd="152dp"
        android:gravity="center"
        android:hint="닉네임" />

    <Button
        android:id="@+id/id_set_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30.8dp"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="30.8dp"
        android:background="#00ff0000"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:text="     계정 관리                                                                     >"
        android:textColor="#454545"
        android:textSize="15sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/add_bf_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/id_set_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30.8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30.8dp"
        android:background="#00ff0000"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="     친구 관리                                                                     >"
        android:textColor="#454545"
        android:textSize="15sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/bell_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/add_bf_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30.8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30.8dp"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:background="#00ff0000"
        android:text="     알림 관리                                                                     >"
        android:textColor="#454545"
        android:textSize="15sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/id_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30.8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30.8dp"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:background="#00ff0000"
        android:text="     로그아웃                                                                     >"
        android:textColor="#454545"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/bell_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30.8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30.8dp"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="     버전 정보"
        android:textColor="#454545"
        android:textSize="15sp"
        android:textStyle="normal" />



</RelativeLayout>
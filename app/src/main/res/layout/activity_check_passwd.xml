<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingPage.CheckPasswdActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="133.3dp"
        android:layout_marginTop="44.2dp"
        android:layout_marginEnd="133.3dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3.3sp"
        android:text="비밀번호 확인"
        android:textSize="24sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/check_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="34dp"
        android:hint="이메일"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/check_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="115.3dp"
        android:layout_marginEnd="34dp"
        android:hint="비밀번호"
        android:ems="10"
        android:inputType="textPassword"  />

    <Button
        android:id="@+id/button2"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:backgroundTint="@color/white"
        android:background="#00ff0000"
        android:text="비밀번호를 잊으셨나요 ?"
        android:textColor="#979797"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/round"
        android:text="확인"
        android:textColor="@color/black" />



</RelativeLayout>